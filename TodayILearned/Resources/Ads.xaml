<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:my="clr-namespace:Microsoft.Advertising.Mobile.UI;assembly=Microsoft.Advertising.Mobile.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">

    <Style x:Key="BorderlessAdControlStyle" TargetType="my:AdControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="my:AdControl">
                    <Border x:Name="ControlBorder">
                        <Border.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{StaticResource PhoneForegroundColor}" />
                            </Style>
                        </Border.Resources>
                        <Border.BorderBrush>
                            <StaticResource ResourceKey="PhoneBackgroundBrush"/>
                        </Border.BorderBrush>
                        <StackPanel x:Name="LayoutRoot" Background="{StaticResource PhoneBackgroundBrush}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
